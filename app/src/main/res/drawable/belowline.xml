<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />
            <solid android:color="#ffffff" />
            <stroke
                android:width="2dp"
                android:color="#A2A2A2"
                android:dashWidth="5dp" />
            <padding
                android:bottom="5dp"
                />
        </shape>
    </item>
</layer-list>