<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/hi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:elevation="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:background="@color/green"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drop_shadow"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/agent_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="agent id"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/agent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="name"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="source"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECK"
                    android:textColor="#fff"
                    android:background="@color/hapcolor"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/agent_id1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Agent Id :" />

                <TextView
                    android:id="@+id/agent_id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="agent id"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLOSE"
                    android:textColor="#fff"
                    android:background="@color/hapcolor"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/agent_name1"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Agent Name :" />

                <TextView
                    android:id="@+id/agent_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="agent name"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/agent_number"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Contact Number :" />

                <TextView
                    android:id="@+id/agent_number1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="agent number"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/total_rides"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Number of rides :" />

                <TextView
                    android:id="@+id/total_rides1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="total rides"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_fare"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Total Amount" />

                <TextView
                    android:id="@+id/total_fare1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="total_amount"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/source1"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area :"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/source2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:hint="source"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/digital"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Total Paid :" />

                <TextView
                    android:id="@+id/digital1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/cash"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Total UnPaid :" />

                <TextView
                    android:id="@+id/cash1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textbg">
                <TextView
                    android:id="@+id/total_fare2"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fare :"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/total_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:hint="Total Fare"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textbg">
                <TextView
                    android:id="@+id/est_time1"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/est_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:hint="Time"
                    />

            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collect"
                    android:background="@color/hapcolor"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp" android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:background="@color/hapcolor"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:text="Generate OTP"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


        </LinearLayout>









    </android.support.v7.widget.CardView>
</LinearLayout>